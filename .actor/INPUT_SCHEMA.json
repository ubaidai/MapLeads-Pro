{
    "title": "Google Maps Business Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "searchQuery": {
            "title": "Search Query",
            "type": "string",
            "description": "What you're searching for (e.g., 'restaurants', 'coffee shops', 'dentists')",
            "editor": "textfield",
            "example": "coffee shops"
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "Where to search (e.g., 'New York, NY', 'Los Angeles', 'London')",
            "editor": "textfield",
            "example": "New York, NY"
        },
        "maxResults": {
            "title": "Maximum Results",
            "type": "integer",
            "description": "Maximum number of businesses to scrape",
            "default": 20,
            "minimum": 1,
            "maximum": 500,
            "editor": "number"
        },
        "includeReviews": {
            "title": "Include Reviews",
            "type": "boolean",
            "description": "Extract individual reviews (increases scraping time)",
            "default": false,
            "editor": "checkbox"
        },
        "language": {
            "title": "Language",
            "type": "string",
            "description": "Language code for search results",
            "default": "en",
            "editor": "select",
            "enum": ["en", "es", "fr", "de", "it", "pt", "ja", "zh", "ar", "ru"],
            "enumTitles": ["English", "Spanish", "French", "German", "Italian", "Portuguese", "Japanese", "Chinese", "Arabic", "Russian"]
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Proxy settings for the scraper",
            "default": { "useApifyProxy": true },
            "editor": "proxy"
        }
    },
    "required": ["searchQuery", "location"]
}
